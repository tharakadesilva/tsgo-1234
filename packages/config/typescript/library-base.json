{
    "extends": "./base.jsonc",
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": false,
        "noUncheckedIndexedAccess": true,
        "paths": {
            "@/*": ["./src/*"],
            "@/assets/*": ["./assets/*"]
        },
        "strict": true
    },
    "exclude": ["${configDir}/node_modules"]
}
